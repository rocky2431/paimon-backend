# Paimon Backend Environment Configuration
# Copy this file to .env and update values

# Application
APP_NAME=paimon-backend
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-this-in-production

# API
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=paimon

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Blockchain (BSC)
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_RPC_BACKUP_URLS=["https://bsc-dataseed1.defibit.io/","https://bsc-dataseed1.ninicoin.io/"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
